$.fn.show_error=function(text,focus,clear){$(".invalid-feedback").html("");$(".invalid-feedback").hide();if($(this).next(".invalid-feedback").length==1){$(this).next(".invalid-feedback").show();$(this).next(".invalid-feedback").html(text);if(focus===undefined||focus===true)$(this).focus();if(clear!==undefined||clear===true)$(this).val("");}};function validate_form(){var chk_find_what=$("input[name='chk_find_what']:checked").val();var txt_current_salary=$("#txt_current_salary").val();var txt_percentage_or_salary=$("#txt_percentage_or_salary").val();if(txt_current_salary==""){$("#txt_current_salary").show_error("Enter the Current Salary.");}
else if(isNaN(parseInt(txt_current_salary))){$("#txt_current_salary").show_error("Enter the value number for Current Salary.");}
else if(txt_percentage_or_salary==""){$("#txt_percentage_or_salary").show_error((chk_find_what=="percentage"?"Enter the Percentage.":"Enter the New Salary."));}
else if(isNaN(parseInt(txt_percentage_or_salary))&&chk_find_what=="percentage"){$("#txt_percentage_or_salary").show_error("Percentage should a valid number.");}
